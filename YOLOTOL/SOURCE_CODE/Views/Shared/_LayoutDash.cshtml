
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" lang="es" />
    <title>@ViewData["Title"] - YOLOTOL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <script src="https://kit.fontawesome.com/1f837e8255.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Dashboard.css">

</head>

<body>
     <div class='dashboard'>
         <div class="dashboard-nav">

    <header>
     <div class="vertical-nav" id="sidebar" style="margin-bottom:90px; ">
         <div class="py-4 px-3 mb-4">
             <div class="media d-flex align-items-center">
                 <img src="~/img/Home/Nos-LogEden.png" width="65" class="mr-3 rounded-circle img-thumbnail">
                 <div class="media-body text-light">
                     <h4 class="m-0" style="">Abdiel Flores</h4>
                     <p class=" mb-0 text-light" style="font-family:'Oregon LDO'">Administrador</p>
                 </div>
             </div>
         </div>
     </div>
     </header>
     <br />
     <nav class="dashboard-nav-list">
         <a asp-action="Index" asp-controller="Dashboard" class="dashboard-nav-item">
             <i class="fas fa-home"></i>
             INICIO
         </a>
         <a href="#" class="dashboard-nav-item">
             <i class="fas fa-user"></i>
             PERFIL
         </a>
         <div class='dashboard-nav-dropdown'>
             <a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">
                 <i class="fas fa-tools"></i>
                 ADMINISTRADOR
             </a>
             <div class='dashboard-nav-dropdown-menu'>
                 <a asp-action="Index" asp-controller="Usuarios" class="dashboard-nav-dropdown-item">Usuarios</a>
                 <a asp-action="Index" asp-controller="Productos" class="dashboard-nav-dropdown-item">Productos</a>
                 <a asp-action="Index" asp-controller="Categorias" class="dashboard-nav-dropdown-item">Categorias</a>
                 <a asp-action="Index" asp-controller="TiposDeUsuarios" class="dashboard-nav-dropdown-item">Tipo de usuario</a>
                 <a asp-action="Index" asp-controller="Direcciones" class="dashboard-nav-dropdown-item">Direcciones</a>
             </div>
         </div>
         <div class='dashboard-nav-dropdown'>
             <a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">
                 <i class="fas fa-users"></i>
                 PADRES
             </a>
             <div class='dashboard-nav-dropdown-menu'>
                 <a asp-action="Datos" asp-controller="Dashboard" class="dashboard-nav-dropdown-item">Perfil del jugador</a>
                 <a asp-action="Index" asp-controller="Direcciones" class="dashboard-nav-dropdown-item">Direcciones</a>
             </div>
         </div>
         <div class='dashboard-nav-dropdown'>
             <a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">
                 <i class="fas fa-brain"></i> PROFESIONALES
             </a>
             <div class='dashboard-nav-dropdown-menu'>
                 <a asp-action="Index" asp-controller="Usuarios" class="dashboard-nav-dropdown-item">Jugadores</a>
                 <a asp-action="Datos" asp-controller="Dashboard" class="dashboard-nav-dropdown-item">Perfil del jugador</a>
             </div>
         </div>
         <a href="#" class="dashboard-nav-item">
             <i class="fas fa-cogs"></i>
             AJUSTES
         </a>

         <div class="nav-item-divider"></div>
         <a asp-action="Logout" asp-controller="Login" class="dashboard-nav-item">
             <i class="fas fa-sign-out-alt"></i>
             Cerrar sesión
         </a>
     </nav>
     </div>
     <div class='dashboard-app'>
         <header class='dashboard-toolbar'>
             <a href="#!" class="menu-toggle"><i class="fas fa-bars"></i></a>
             <div class="position-absolute top-50 start-50 translate-middle">
                 <img width="200" class="" src="~/img/Dashboard/LogoYolotol22.png">
             </div>
             

             <div class="dropdown" style="padding: 5px; justify-content: right; margin-left:75%;">
                 <button type="button" class="btn" data-toggle="dropdown" asp-action="Inicio" asp-controller="Home">
                     <img src="~/img/Home/Nos-LogEden.png" width="50" class="mr-3 rounded-circle img-thumbnail">
                 </button>

                 <div class="dropdown-menu dropdown-menu-end">
                     <div aria-hidden="true" aria-labelledby="dropdownMenuLink">
                         <a class="dropdown-item " asp-action="Inicio" asp-controller="Home"><i class="fas fa-chevron-circle-left"></i> Volver al sitio</a>
                         <a class="dropdown-item"  asp-controller="Catalogo" asp-action="Index"><i class="fas fa-shopping-basket"></i> Tienda</a>
                         <a class="dropdown-item" asp-action="Logout" asp-controller="Login"><i class="fa fa-sign-out"></i> Cerrar sesión</a>
                     </div>
                 </div>
             </div>

         </header>




    <div class='dashboard-content'>
        <div class='container'>
            <main role="main" class="pb-1" style="">
                @RenderBody()
            </main>
        </div>
    </div>
    </div>


    </div>

  





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/all.js"></script>
    <script src="~/js/Dasboard.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>