
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YOLOTOL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Home/Inicio.css" />
    <link rel="stylesheet" href="~/css/Home/Nosostros.css" />
    <link rel="stylesheet" href="~/css/Home/Contacto.css" />
    <link rel="stylesheet" href="~/css/boton.css" />
    <link rel="stylesheet" href="~/css/Card.css" />
    <link rel="manifest" href="~/manifest.json">
    <link rel="stylesheet" href="~/css/Catalogo/Details.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.css" rel="stylesheet" />
    <!-- SimpleLightbox plugin CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css" rel="stylesheet" />
    <script type="module" src="~/pwabuilder-sw-register.js"></script>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css'>
    <link href='//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' rel='stylesheet' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>

    <nav class=" badge-light">
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn">
            <i class="fas fa-bars"></i>
        </label>
        <a href="#" class="enlace">
            <img href="#../Index" src="~/img/Home/Inicio_logo.png" alt="Logo" title="YOLOTOL" class="logo">
        </a>
        <ul>
            <li>
                <a class="button-27" asp-controller="Home" asp-action="Inicio">INICIO</a>
            </li>
            <li>
                <a class="button-24" asp-controller="Catalogo" asp-action="Index">TIENDA</a>
            </li>
            <li>
                <a class="button-25" asp-controller="Home" asp-action="Nosotros">NOSOTROS</a>
            </li>
            <li>
                <a class="button-26" asp-controller="Home" asp-action="Contacto">CONTÁCTANOS</a>
            </li>


            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a class="button-28" role="button" asp-controller="Dashboard" asp-action="Index">PANEL</a>
                </li>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <li><a class="button-29" asp-action="Logout" asp-controller="Login">CERRAR SESIÓN </a></li>
            }
            else
            {
                <li><a class="button-29" asp-action="Login" asp-controller="Home">INICIAR SESIÓN </a></li>
            }


        </ul>

    </nav>
    <hr class="hr" />





    <div class="btn-flotante btn-group dropup fixed-bottom box-shadow col-3">
        <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-shopping-cart"></i>
            <span class="badge badge-success">@ViewBag.count</span>

        </button>
        <div class="dropdown-menu">
            <div class="row total-header-section">
                <div class="col-lg-7 col-sm-7 col-7">
                    <i class="fa fa-shopping-bag" aria-hidden="true"
                       style="font-size: 20px; margin-right: 10px; color: #00bfeb;"></i>
                    <span class="badge badge-pill badge-danger" style="color: #00bfeb;">@ViewBag.count</span>
                </div>
                <div class="col-lg-7 col-sm-7 col-7 total-section text-right">
                    <p>Total: <span class="text-info">$@ViewBag.total</span></p>
                </div>
            </div>
            @if (ViewBag.cart != null)
            {
                @foreach (var item in ViewBag.cart)
                {
                    <div class="row cart-detail">
                        <div class="col-lg-4 col-sm-4 col-4 cart-detail-img">
                            <img src="~/Productos/@item.Producto.Imagen" width="50" />
                        </div>
                        <div class="col-lg-8 col-sm-8 col-8 cart-detail-product">
                            <p>@item.Producto.Nombre</p>
                            <span class="price text-info"> $@item.Producto.Precio</span> <span class="count"> Cantidad:@item.Quantity</span>
                        </div>
                    </div>
                }
            }
            else
            {
                <small style="color: red;">
                    Aún no hay productos en el carrito.
                </small>
            }
            <div class="row">
                <div class="col-lg-12 col-sm-12 text-center checkout">
                    <a type="button" class="btn text-white" asp-action="ShoppingCart" asp-controller="Catalogo" style="background: #00bfeb; ">
                        Ver todo
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="social-buttons btn-flotante">
        <a href="#" class="social-buttons__button social-button social-button--facebook" aria-label="Facebook">
            <i class="fab fa-facebook-f"></i>
        </a>
    </div>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-distributed">

        <div class="footer-left">

            <h3>YOLOTOL</h3>

            <p class="footer-links">
                <a asp-controller="Home" asp-action="Inicio" class="text-white">Inicio</a>
                |
                <a class="text-white" asp-controller="Catalogo" asp-action="Index">Tienda</a>
                |
                <a asp-controller="Home" asp-action="Descargar" class="text-white">Descargar</a>
                |
                <a asp-controller="Home" asp-action="Nosotros" class="text-white">Nosotros</a>
            </p>

            <p class="footer-company-name">© 2022 EDEN -Todos los derechos reservados</p>
        </div>

        <div class="footer-center">
            <div>
                <i class="fa fa-phone"></i>
                <p>+52 2846598950</p>
            </div>
            <div>
                <i class="fa fa-envelope"></i>
                <p><a href="">yolotol@gmail.com</a></p>
            </div>

        </div>
        <div class="footer-right">
            <p class="footer-company-about">
                <span> ¡Síguenos en nuestras redes sociales! </span>
                Regístrate para recibir noticias y actualizaciones sobres nuestros productos
            </p>
            <div class="footer-icons">
                <a href="#"><i class="fa fa-facebook"></i></a>

                <a href="#"><i class="fa fa-instagram"></i></a>

            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Cart.js"></script>
    <script src="~/js/DatosJuga.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.6/d3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="path/to/chartjs/dist/chart.js"></script>
    <script>
        const myChart = new Chart(ctx, { ...});
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
