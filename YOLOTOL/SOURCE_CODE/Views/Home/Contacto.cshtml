@{

    ViewData["Title"] = "Contacto";
}


<div class="contact1">
    <div class="container-contact1">
        <div class="contact1-pic js-tilt" data-tilt>
            <img src="~/img/Home/img-01.png" alt="IMG">
        </div>

        <form class="contact1-form validate-form">
            <span class="contact1-form-title">
                Contáctanos
            </span>

            <div class="wrap-input1 validate-input" data-validate="El nombre es necesario">
                <input class="input1" type="text" name="name" placeholder="Nombre">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Se requiere un correo electrónico válido: abcd@gmail.com">
                <input class="input1" type="text" name="email" placeholder="Correo Electrónico">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Se requiere un asunto">
                <input class="input1" type="text" name="subject" placeholder="Asunto">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="El mensaje es obligatorio">
                <textarea class="input1" name="message" placeholder="Mensaje"></textarea>
                <span class="shadow-input1"></span>
            </div>

            <div class="container-contact1-form-btn">
                <button class="contact1-form-btn">
                    <span>
                        Enviar
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    $('.js-tilt').tilt({
        scale: 1.1
    })
</script>

