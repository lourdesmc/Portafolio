@{
    Layout = null;
    ViewData["Title"] = "Descarga";
}
<!DOCTYPE html>
<html lang="es-mx">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/css/Home/Descargas.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="manifest" href="/manifest.json">
    <script type="module" src="/pwabuilder-sw-register.js"></script>
    <!-- SimpleLightbox plugin CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css" rel="stylesheet" />
    <script type="module" src="~/pwabuilder-sw-register.js"></script>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css'>
    <link href='//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' rel='stylesheet' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>

    <nav class=" badge-light">
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn">
            <i class="fas fa-bars"></i>
        </label>
        <a href="#" class="enlace">
            <img href="#../Index" src="~/img/Home/Inicio_logo.png" alt="Logo" title="YOLOTOL" class="logo">
        </a>
        <ul>
            <li>
                <a class="button-27" asp-controller="Home" asp-action="Inicio">INICIO</a>
            </li>
            <li>
                <a class="button-24" asp-controller="Catalogo" asp-action="Index">TIENDA</a>
            </li>
            <li>
                <a class="button-25" asp-controller="Home" asp-action="Nosotros">NOSOTROS</a>
            </li>
            <li>
                <a class="button-26" asp-controller="Home" asp-action="Contacto">CONTÁCTANOS</a>
            </li>


            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a class="button-28" role="button" asp-controller="Dashboard" asp-action="Index">PANEL</a>
                </li>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <li><a class="button-29" asp-action="Logout" asp-controller="Login">CERRAR SESIÓN </a></li>
            }
            else
            {
                <li><a class="button-29" asp-action="Login" asp-controller="Home">INICIAR SESIÓN </a></li>
            }


        </ul>

    </nav>
    <hr class="hr" />

    <br />



    <section class="home " style="font-family: Oregon LDO">
        <div class="container px-5">
            <div class="row gx-5 align-items-center justify-content-center">
                <div class="col-lg-8 col-xl-7 col-xxl-6 main_home">
                    <div class="my-5 text-center text-xl-start">
                        <h1 class="display-4 fw-bolder text-white mb-2 font-weight-bold">Descarga nuestra aplicación y adéntrate en un mundo nuevo </h1>
                        <div class="d-grid gap-3 d-sm-flex justify-content-center align-content-center text-center">
                            <a class="btn btn-outline-light btn-lg px-4 me-sm-3 font-weight-bold mt-1" asp-controller="Home" asp-action="Inicio">DESCARGA</a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img class="img-fluid rounded-3 my-5" src="~/img/Home/phone1.png" alt="YOLOTOL" title="YOLOTOL" /></div>
            </div>
        </div>
    </section>



    







    <footer class="footer-distributed">

        <div class="footer-left">

            <h3>YOLOTOL</h3>

            <p class="footer-links">
                <a asp-controller="Home" asp-action="Inicio" class="text-white">Inicio</a>
                |
                <a class="text-white" asp-controller="Catalogo" asp-action="Index">Tienda</a>
                |
                <a asp-controller="Home" asp-action="Descargar" class="text-white">Descargar</a>
                |
                <a asp-controller="Home" asp-action="Nosotros" class="text-white">Nosotros</a>
            </p>

            <p class="footer-company-name">© 2022 EDEN -Todos los derechos reservados</p>
        </div>

        <div class="footer-center">
            <div>
                <i class="fa fa-phone"></i>
                <p>+52 2846598950</p>
            </div>
            <div>
                <i class="fa fa-envelope"></i>
                <p><a href="">yolotol@gmail.com</a></p>
            </div>

        </div>
        <div class="footer-right">
            <p class="footer-company-about">
                <span> ¡Síguenos en nuestras redes sociales! </span>
                Regístrate para recibir noticias y actualizaciones sobres nuestros productos
            </p>
            <div class="footer-icons">
                <a href="#"><i class="fa fa-facebook"></i></a>

                <a href="#"><i class="fa fa-instagram"></i></a>

            </div>

        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Descarga.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
